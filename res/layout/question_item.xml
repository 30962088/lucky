<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="#1d856b"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:text="巴西"
        android:textColor="#1d856b"
        android:textSize="12sp" />

    <com.mengle.lucky.wiget.QuestionLayout
        android:id="@+id/questionlayout"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="82"
            android:textColor="#fff"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/percent"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/percent"
            android:gravity="center"
            android:text="%"
            android:textColor="#fff"
            android:textSize="18sp" />

        <FrameLayout
            android:id="@+id/gameover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/pass"
                android:layout_width="62dp"
                android:layout_height="44dp"
                android:background="@drawable/text_success" />

            <View
                android:id="@+id/notpass"
                android:layout_width="62dp"
                android:layout_height="44dp"
                android:background="@drawable/text_fail" />
        </FrameLayout>
    </com.mengle.lucky.wiget.QuestionLayout>

</LinearLayout>