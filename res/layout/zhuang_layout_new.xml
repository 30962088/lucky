<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp" >

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:background="@drawable/bg_zhuang_select" >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <View
                        android:layout_width="17dp"
                        android:layout_height="18.5dp"
                        android:background="@drawable/icon_person_white" />

                    <TextView
                        android:id="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="( 30 )"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center" >

                    <View
                        android:layout_width="17dp"
                        android:layout_height="18.5dp"
                        android:background="@drawable/icon_clock_white" />

                    <TextView
                        android:id="@+id/endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="PM 12：00 结束"
                        android:textColor="#fff"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <com.mengle.lucky.wiget.PhotoView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="102dp"
                >
            </com.mengle.lucky.wiget.PhotoView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/avatar"
                android:gravity="center" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="#000"
                    android:text="恒大亚冠决赛谁赢?"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/person1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_person_black"
                    android:gravity="center"
                    android:textColor="#29353f"
                    android:textSize="9dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/arrow"
            android:layout_width="10dp"
            android:layout_height="18.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/icon_arrow_white"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>