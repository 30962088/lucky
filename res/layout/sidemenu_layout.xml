<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f2"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp" >

        <LinearLayout
            android:id="@+id/tab1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_one"
            android:padding="1dp"
             >

            <TextView
                android:id="@+id/tab1nav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.66"
                android:background="@drawable/bg_tab_two"
                android:gravity="center"
                android:text="导航"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tab1setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置"
                android:textColor="#e47134"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            
            android:id="@+id/tab2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_one"
            android:padding="1dp" >

            <TextView
                android:id="@+id/tab2nav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="导航"
                android:textColor="#e47134"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tab2setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.66"
                android:background="@drawable/bg_tab_two"
                android:gravity="center"
                android:text="设置"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>

</LinearLayout>