<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f="http://schemas.android.com/apk/res/com.mengle.lucky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null" />

            <requestFocus />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <View
                    android:layout_width="23dp"
                    android:layout_height="22.5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_search" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门关键词"
                android:textColor="#606366"
                android:textSize="15sp" />
        </LinearLayout>

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/flow"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            f:layout_newLine="true"
            f:layout_verticalSpacing="5dp"
            f:horizontalSpacing="15dp" >
        </org.apmem.tools.layouts.FlowLayout>
    </LinearLayout>

    <com.mengle.lucky.wiget.CommonHeaderView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/leftnav"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="搜素"
                android:textColor="#fff"
                android:textSize="18sp" />
    
            
        </RelativeLayout>
        
    </com.mengle.lucky.wiget.CommonHeaderView>

</RelativeLayout>