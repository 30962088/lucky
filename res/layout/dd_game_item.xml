<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@drawable/shape2_selector"
        android:paddingRight="15dp" >

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape1_selector"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="97dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_img_1" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/dd_time_selector"
                    android:drawablePadding="5dp"
                    android:text="PM 12：00 结束"
                    android:textColor="@color/dd_color_selector"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/dd_d_selector"
                    android:drawablePadding="5dp"
                    android:text="（30 )"
                    android:textColor="@color/dd_color_selector"
                    android:textSize="9sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="杨幂和刘恺威会结婚吗?"
                android:textColor="@color/dd_color_selector"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/who"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发起人：XXXXXXXXXXXXX"
                android:textColor="@color/dd_color_selector"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>