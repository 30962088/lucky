<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_zhuang_right"
        android:gravity="center"
        android:layout_marginRight="7dp" >

        <com.mengle.lucky.wiget.PhotoView
            android:id="@+id/photo"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_img_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/bg_zhuang_left" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="恒大亚冠决赛谁赢?"
            android:gravity="center_vertical"
            android:textColor="#29353f"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:ellipsize="marquee"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center" >

            <View
                android:layout_width="12.5dp"
                android:layout_height="13.5dp"
                android:background="@drawable/icon_person_black" />

            <TextView
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(30)"
                android:textColor="#29353f"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>