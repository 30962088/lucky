<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f1f1f2">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="#e1e2e6">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#434a54"
            android:text="评论"/>
        
        <View 
            android:layout_marginLeft="5dp"
            android:layout_width="16dp"
            android:layout_height="18.5dp"
            android:background="@drawable/icon_refresh"></View>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        >
        
        <LinearLayout 
            android:background="@drawable/bg_radius_blue"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center">
            
            <View
                android:layout_width="18.5dp"
                android:layout_height="17dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_star1"></View>
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="15sp"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:background="@drawable/bg_radius_blue"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="9dp"
            android:gravity="center">
            
            <View
                android:layout_width="18.5dp"
                android:layout_height="17dp"
                android:background="@drawable/icon_comment1"></View>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <ListView 
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

</LinearLayout>
