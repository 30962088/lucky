<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <com.mengle.lucky.wiget.PhotoView 
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/photo"
        android:src="@drawable/test_img_user"/>

    <TextView 
        android:id="@+id/content"
        android:layout_width="0dp"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_left"
        android:text=""
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#606366"/>
    
    <TextView 
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:30"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="9dp"
        android:textColor="#898e91"
        android:drawableLeft="@drawable/icon_clock_small"
        android:drawablePadding="6dp"/>
    
</LinearLayout>
