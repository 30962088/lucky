<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.mengle.lucky.wiget.ThemeLayout
        android:id="@+id/theme"
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.mengle.lucky.wiget.ThemeLayout>
    
    <com.mengle.lucky.wiget.CommonHeaderView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/leftnav"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="看庄"
                android:textColor="#fff"
                android:textSize="18sp" />
    
            
            <ImageView
                android:id="@+id/right_comment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true" 
                android:src="@drawable/btn_comment" />
            
        </RelativeLayout>
        
    </com.mengle.lucky.wiget.CommonHeaderView>

</RelativeLayout>